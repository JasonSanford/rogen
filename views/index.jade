extends layout

block content
  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container-fluid
      .navbar-header
        button(type='button' class='navbar-toggle' data-toggle='collapse' data-target='#nav-collapse')
          span.sr-only.
            Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#').
          Blart
      .navbar-collapse.collapse(id='nav-collapse')
        ul.nav.navbar-nav.navbar-right
          li
            a(href='#new', id='new-record-a')
              span.white.glyphicon.glyphicon-plus
              |&nbsp;New Record
  .content
    #map-container
    .modal.fade(role='dialog', id='record-modal', tabindex='-1')
      .modal-dialog
        .modal-content
          .modal-header
            button(type='button', class='close', data-dismiss='modal')
              span(aria-hidden='true')
                &times;
              span.sr-only.
                Close
            h4.modal-title(id='myModalLabel').
              Modal title
          .modal-body.
            Yo Dawg
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal').
              Close
            button.btn.btn-primary(type='button').
              Save changes
    .modal.fade(role='dialog', id='new-record-modal', tabindex='-1')
      .modal-dialog
        .modal-content
          .modal-header
            button(type='button', class='close', data-dismiss='modal')
              span(aria-hidden='true')
                &times;
              span.sr-only.
                Close
            h4.modal-title(id='myModalLabel').
              New Record
          .modal-body.
            Yo Dawg
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal').
              Cancel
            button.btn.btn-primary(type='button').
              Create
